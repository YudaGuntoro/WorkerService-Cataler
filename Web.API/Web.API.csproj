      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Template\ProductionPlan.xlsx">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="RemoveDuplicateNLogConfig" BeforeTargets="ResolvePublishFiles">
    <ItemGroup>
      <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)" Condition="'%(RelativePath)' == 'NLog.config' And '%(Identity)' != 'NLog.config'" />
    </ItemGroup>
  </Target>
